<?xml version="1.0" encoding="utf-8"?>
<com.lewa.launcher.ShortcutIcon xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lewa.launcher.BubbleTextView
        android:id="@+id/app_icon_title"
        style="@style/WorkspaceIcon"
        android:focusable="true" />
    <TextView android:id="@+id/app_unread"
        style="@style/MsgHintAppearance" />
    <ImageView android:id="@+id/app_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:layout_gravity="top|right"
        android:visibility="invisible"
        android:src="@drawable/floating_selected" />
</com.lewa.launcher.ShortcutIcon>
