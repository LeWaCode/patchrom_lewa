<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/association_view" 
	android:orientation="vertical"
	android:layout_width="match_parent" 
	android:layout_height="match_parent">

    <LinearLayout   
        android:layout_alignParentTop="true"
	    android:orientation="horizontal"
	    android:layout_width="match_parent" 
	    android:layout_height="match_parent"
	    android:layout_above="@+id/association_buttons">
	    <ImageView
            android:id="@+id/contact_photo"
            android:layout_width="130dip"
            android:layout_height="130dip"
            android:layout_margin="8dip"
            android:scaleType="centerCrop" />

        <ListView
            android:id="@+id/association_list"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fastScrollEnabled="true"
            android:fillViewport="true" />

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_above="@id/association_buttons"
        android:background="?android:attr/dividerHorizontal" />
        
    <LinearLayout android:id="@+id/association_buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle" >

        <Button android:id="@+id/btn_discard"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/menu_doNotSave"
        	/>
        
        <Button android:id="@+id/btn_done"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/menu_done"
        	/>

    </LinearLayout>
</RelativeLayout>

