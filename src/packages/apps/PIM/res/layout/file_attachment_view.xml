<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_attachment_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/file_attachment_background"
    >
    <ImageView
        android:id="@+id/file_attachment_thumbnail"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="3dip"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toLeftOf="@id/file_attachment_thumbnail"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        >
            <TextView
                android:id="@+id/file_attachment_name_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="clip_horizontal"
                android:textSize="18sp"
                android:textColor="#000000"
                />
            <TextView 
                android:id="@+id/file_attachment_size_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"				
                android:textSize="16sp"
                android:textColor="#7b7b7b"
                />
    </LinearLayout>
    <ImageView
        android:id="@+id/file_attachment_divider"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="7dip"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:src="@drawable/file_attachment_divider"/>
    <ImageView
        android:id="@+id/file_attachment_button_remove"
        android:layout_alignParentRight="true"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/ic_delete_file_attachment" 
        android:visibility="gone"
        />
</LinearLayout>
