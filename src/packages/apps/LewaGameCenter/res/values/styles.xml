<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="app_theme" parent="android:Theme.Light" />

    <style name="activity_theme" mce_bogus="1" parent="@lewa:style/V5.Theme">
        <item name="android:windowAnimationStyle">@style/activity_animation</item>
    </style>

    <style name="activity_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
    </style>
    <!--
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    -->
    <style name="pager_style">
        <item name="showBottomBar">true</item>
        <item name="showTab">true</item>
    </style>

    <style name="category_item_font">
        <item name="android:textColor">@color/category_item_font</item>
        <item name="android:textSize">@dimen/category_item_font</item>
    </style>

    <style name="loading_font">
        <item name="android:textColor">@color/loading_font</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="title_item_font">

        <!--
             <item name="android:textColor">@color/list_title_item_font</item>
        <item name="android:textSize">@dimen/list_title_item_font</item>        -->
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="list_title_item_font">

        <!--
             <item name="android:textColor">@color/list_title_item_font</item>
        <item name="android:textSize">@dimen/list_title_item_font</item>        -->
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    </style>

    <style name="list_content_item_font">

        <!--
             <item name="android:textColor">@color/list_content_item_font</item>
        <item name="android:textSize">@dimen/list_content_item_font</item>        -->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

    <style name="list_item_status_font">
        <item name="android:textColor">@color/list_item_status_font</item>
        <item name="android:textSize">@dimen/list_item_status_font</item>
    </style>

    <style name="rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_bg</item>
        <item name="android:indeterminateDrawable">@drawable/rating_bar_bg</item>
        <item name="android:minHeight">@dimen/rate_height</item>
        <item name="android:maxHeight">@dimen/rate_height</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    <style name="drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="drop_down_list_footer_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
    </style>

    <style name="drop_down_list_header_font_style">
        <item name="android:textColor">@color/drop_down_list_header_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="drop_down_list_header_second_font_style">
        <item name="android:textColor">@color/drop_down_list_header_second_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="drop_down_list_footer_font_style">
        <item name="android:textColor">@color/drop_down_list_footer_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>