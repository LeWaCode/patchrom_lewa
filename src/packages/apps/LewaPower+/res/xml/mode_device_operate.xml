<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:orderingFromXml="true"
    android:key="Intercept">
    <PreferenceCategory 
    	android:key="spm_custom_settings_openning" 
    	android:title="@string/spm_custom_settings_openning_title"> 
        <CheckBoxPreference
                android:key="spm_dev_airplane"
                android:title="@string/dev_airplane"
                android:defaultValue="false" />
    </PreferenceCategory >

    
	<PreferenceCategory
		android:key="spm_custom_settings_closing" 
		android:title="@string/spm_custom_settings_closing_title" >
        <CheckBoxPreference
                android:key="spm_dev_wifi"
                android:title="@string/dev_wifi"
                android:defaultValue="false" />
        <CheckBoxPreference
                android:key="spm_dev_gps"
                android:title="@string/dev_gps"
                android:defaultValue="false" />
     
        <CheckBoxPreference
                android:key="spm_dev_bluetooth"
                android:title="@string/dev_bluetooth"
                android:defaultValue="false" />
     
        <CheckBoxPreference
                android:key="spm_dev_data"
                android:title="@string/dev_data"
                android:defaultValue="false" />
        <CheckBoxPreference
                android:key="spm_dev_haptic"
                android:title="@string/dev_haptic"
                android:defaultValue="false" /> 
        <CheckBoxPreference
                android:key="spm_dev_sync"
                android:title="@string/spm_screen_sync_show"
                android:defaultValue="false" />
       <CheckBoxPreference
                android:key="spm_dev_backlight"
                android:title="@string/dev_key_bglight"
                android:defaultValue="false" />
	 </PreferenceCategory>

	 
	 <PreferenceCategory
	 	android:key="spm_custom_settings_setting_max"
    	android:title="@string/spm_custom_settings_setting_max_title"> 
        <ListPreference
        	android:key="spm_dev_time_out"
        	android:widgetLayout="@null"
        	android:title="@string/spm_screen_timeout_show"
 		    android:dialogTitle="@string/spm_screen_timeout_show"
 		    android:entries="@array/screen_timeout_entries"
 		    android:persistent="false"
			android:entryValues="@array/screen_timeout_values" 
            />
        <Preference
        	android:key="spm_dev_brghtiness"
        	android:widgetLayout="@null"
        	android:title="@string/spm_screen_light_show"
            android:defaultValue="10"
            />
        
